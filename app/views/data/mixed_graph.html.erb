digraph mixed {<br/>
  node [shape = rect, style = "rounded,filled", fontname = Helvetica, fillcolor="#ffffff"];<br/>
  edge[arrowsize = 0.4];<br/>
	rankdir = LR;<br/>
  <% for course in @courses %>
    <%= h("\"#{course.shortname_with_id}\" [fillcolor=\"#dddddd\"];") %><br/>
  <% end %>
  
  <% @mixed_links.each do |connection| %>
    <%= h("#{connection};") %><br/>
  <% end %>
  
}<br/>