<div id="recommendations">
  <table cellspacing="0">
	<tr>
		<th class="Left">Course</th>
	</tr>
	
  <% for r in @recommendations %>
    <tr class="<%= cycle("Alt","Normal") %>">
    	<td class="Left">
			<%= link_to h(r.course.fullname), course_path(r.course) %>
			<p class="Description"><%= r.recommendation_text %></p>
			<%= link_to "Edit Review", edit_recommendation_path(r) %>
		</td>
    </tr>
  <% end -%>
  </table>
  <div class="TableFooter">
    
  </div>
</div>