<h1><%= @title %></h1>

<%= error_messages_for :proficiency %>

<% form_for(:proficiency, :url => proficiency_path(@proficiency), :html => { :method => :put }) do |form| %>
	<p>
  		<strong> Name: </strong>
		<%= form.text_field :name %>
		<%= dcm_edit_select( 'Level:', 'proficiency', :level, Proficiency::LEVEL_OPTIONS ) %>
  	</p>
	<p>
		<%= submit_tag "Update" %>
	</p>

<% end %>

<%= link_to "View Proficiency List", proficiencies_path %>