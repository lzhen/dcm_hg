<%= content_sheet_div %>

<div class="section <%= @section_option %>">
	
	<div class="sheet_title">
	    <p>Admin Digital Culture Events</p>
	</div>
	
	<div style="margin: 16px;">
   		<% if current_user.is_event_editor %>
   			<%= link_to "Create New Event", new_event_path %>
   		<% end %>
	</div>
	
	<% @events.each do |event| %>
	
		<div class="event" style="margin: 16px;">
		<h3>
			<%= link_to( event.title, edit_event_path(event) ) %>
			<span style="font-size:60%;"><%= link_to "Delete", event_path(event), :confirm => "Are you sure you want to delete this event: #{event.title}?", :method => :delete %></span>
		</h3>
		<p><%= event.happens_at.strftime("%A %B %d, %Y at %l:%M%p") %></p>
		<% unless event.photo_file_name.nil? %>
			<img src="<%= event.photo.url %>" class="event_img" />
		<% end %>
		<p><%= event.body %></p>
		
		</div>
	
	<% end %>
	
	
</div>

</div>